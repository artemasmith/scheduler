<%= form_for @report do |f|%>

<%= f.hidden_field :project_id, value: params[:project_id]%>
<%= f.hidden_field :user, value: session[:user_id]%>
<%= f.hidden_field :id, value: @sday.id %>

<ul class='unstyled'>

<li>
<div class="input-prepend">
<span class="add-on">
<%= f.label t :client %></span>
<%= f.text_field :client%>
</div>
</li>

<li>
<div class="input-prepend">
<span class="add-on">
<%= f.label t :call_time%></span>
<%= f.time_select :call_time %>
</div>
</li>

<li>
<div class="input-prepend">
<span class="add-on">
<%= f.label t :handle_time%></span>
<%= f.time_select :handle_time%>
</div>
</li>

<li>
<div class="input-prepend">
<span class="add-on">
<%= f.label t :problem %></span>
<%= f.text_area :problem, rows: 3%>
</div>
</li>

<li>
<div class="input-prepend">
<span class="add-on">
<%= f.label t :report, count: 1%></span>
<%= f.text_area :report, rows: 3 %><br>
</div>
</li>


<%= f.submit t("save"), class: "btn btn-primary"%>


<% end%>

</ul>