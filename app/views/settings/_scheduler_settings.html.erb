<% d=Date.today.beginning_of_week %>


<% 7.times do %>    
<div class="row">    <%= check_box_tag 'settings[duty][]', d.wday,settings['duty'].include?(d.wday.to_s) %> <%= wday_to_str(d.wday)%> </div> 
    
<%    d+=1 %>
<% end %>

