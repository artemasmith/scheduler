<% def wday_to_str(day)%>
<% res = case day%>
<% when 0 then t('sunday') %>
<% when 1 then t('monday') %>
<% when 2 then t('thuesday') %>
<% when 3 then t('wensday') %>
<% when 4 then t('tuesday') %>
<% when 5 then t('friday') %>
<% when 6 then t('saturday') %>
<% end %>
<% end %>


